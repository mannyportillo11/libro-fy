<ol class="post-list">
  {{#each books as |book|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{book.book_url}}" target="_blank">{{book.book_name}}
        <span>Written by: {{book.author_name}}</span>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/book/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>