<ol class="post-list">
  {{#each books as |book|}}
  <li>
    <article class="post">
      <div class="title">
        <h2>{{book.book_name}}</h2>
        <a href="{{book.book_url}}" target="_blank">
        <div class="book-img-container">
          <img class="book-img" src="{{book.img_url}}" alt="{{book.book_name}}" /></a>
        </div>
        <span>Written by: {{book.author_name}}</span>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>