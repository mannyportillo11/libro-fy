  {{#each books as |book|}}
  <div class="row row-cols-auto"></div>
    <div class="col">
      <div class="card">
        <a href="{{book.book_url}}" target="_blank">
      <img class="book-img" src="{{book.img_url}}" alt="{{book.book_name}}" />
      </a>
      <div class="card-body">
      <div class="title">
        <h2>{{book.book_name}}</h2>        
        </div>
        <span>Written by: {{book.author_name}}</span>
        <br>
        <p class="homepage-text">Description:</p>
        <p class="homepage-text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Blanditiis impedit sit, quis nihil iusto ex.</p>
      </div>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/book/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </div>
    </div>
