<section class="dash">
  <h3 class="dash-title">Enter your favorite book to the bookshelf</h3>

  <form class="new-book-form">
    <div>
      <label for="book-name">Book Name</label>
      <input type="text" id="book-name" name="book-name" />
    </div>
    <div>
         <label for="author-name">Author Name</label>
      <input type="text" id="author-name" name="author-name" />
    </div>
    <div>
      <label for="book-url">Where can I find this book?</label>
      <input id="book-url" name="book-url" />
    </div>
    <button type="submit" class="btn-create">Add Book</button>
  </form>
</section>


{{#if books.length}}
<section class="library">
  <h3>Your Library</h3>
  <ol class="hello">
    {{#each books as |book|}}
    <li>
     <article class="book">
  <div class="title">
    <a href="{{book.book_url}}" target="_blank">{{book.book_name}}</a>
    <div class="book-img-container">
      <img class="book-img"  src="{{book.img_url}}" alt="{{book.book_name}}">
    </div>
  </div>
  <div class="meta">
    {{vote_count}} {{ vote_count}} {{user.username}}
    |
    <a href="/book/{{id}}">{{comments}} check this book!{{ comments}}</a>
      <a href="/{{book.id}}" class="edit-link"></a>
  </div>
</article>
    
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-book.js"></script>